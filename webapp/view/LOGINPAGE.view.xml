		     		        <Input placeholder="Enter Your Password" type="Password" id="emppass" liveChange="validatePassword"></Input> 
		     		      	<Button text="Login" class="sapUiSmallMarginBottom btn" press="login" width="280px" ></Button>
		     				</html:div>
		     			
		     		 </html:div>
		     	
			</Page> 
		
		</pages>
	</App>
</mvc:View>