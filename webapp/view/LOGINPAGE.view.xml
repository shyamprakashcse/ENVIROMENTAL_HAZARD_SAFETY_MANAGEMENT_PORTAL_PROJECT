	xmlns:l="sap.ui.layout" displayBlock="true" xmlns="sap.m">
	<App id="app">
		<pages>
			<Page title="{i18n>title}" class="p1" id="page">
		               <html:p class="headingpara center ">Environmental Health and Safety Management System </html:p> 
		     		<html:div class="logindiv"> 
		     		     
